---
import MetaHead from "@components/general/MetaHead.astro";
import Layout from "@layouts/Layout.astro";
---

<!doctype html>
<html lang="en">

	<head>
		<MetaHead title={"Podium"} description={"Simple podium made with HTML and CSS only"}
			ogImageUrl={"/assets/images/profile.png"} />
	</head>

	<body>
		<Layout>
			<div class="flex justify-center h-[80vh]">
				<!-- Parent Container -->
				<div class="w-[50%] max-h-full border border-white min-w-[175px]">
					<!-- Podium Container -->
					<div class="flex flex-col gap-4 justify-center m-4 p-4 max-h-[95%] overflow-y-auto">
						<img src="/assets/logo/podium/champion.gif" alt="Podium" class="w-24 h-24 mah-h-full max-h-full self-center" />
						<!-- Podium -->
						<div
							class="flex flex-col sm:flex-row place-content-center items-center sm:items-end gap-x-3 gap-y-6 w-full h-[100%]">

							<!-- First place -->
							<div class="flex flex-col gap-2 h-full w-full hover:scale-105 hover:shadow-lg duration-300">

								<!-- Article Image -->
								<div class="text-white text-center border-2 rounded-md break-words overflow-hidden">
									<a href="https://cryptoast.fr/bitcoin/" target="_blank">
										<img src="https://cryptoast.fr/wp-content/uploads/2022/10/bitcoin-btc.png"
											alt="Article Image" class="object-cover" />
									</a>
								</div>

								<!-- First medal -->
								<div
									class="flex justify-center h-12 sm:h-20 w-full text-center py-1 border-4 border-b-0 rounded-md bg-yellow-500 border-yellow-500">
									<img src="/assets/logo/podium/medaille.png" alt="First medal"
										class="w-9 h-9 sm:w-14 sm:h-14" />
								</div>
							</div>

							<!-- Second place -->
							<div
								class="sm:order-first flex flex-col gap-2 h-full w-full hover:scale-105 hover:shadow-lg duration-300">

								<!-- Article Image -->
								<div class="text-white text-center border-2 rounded-md break-words overflow-hidden">
									<a href="https://cryptoast.fr/fiche-ethereum/" target="_blank">
										<img src="https://cryptoast.fr/wp-content/uploads/2018/02/ethereum-eth-analyse.png"
											alt="Article Image" class="object-cover" />
									</a>
								</div>

								<!-- Second medal -->
								<div
									class="flex justify-center h-12 sm:h-16 w-full text-center py- border-4 border-b-0 rounded-md bg-gray border-gray">
									<img src="/assets/logo/podium/medaille_2.png" alt="Second medal"
										class="w-9 h-9 sm:w-12 sm:h-12" />
								</div>
							</div>

							<!-- Third place -->
							<div class="flex flex-col gap-2 w-full h-full hover:scale-105 hover:shadow-lg duration-300">

								<!-- Article Image -->
								<div class="text-white text-center border-2 rounded-md break-words overflow-hidden">
									<a href="https://cryptoast.fr/eigenlayer-tout-savoir-protocole-restaking-ethereum/"
										target="_blank">
										<img src="https://cryptoast.fr/wp-content/uploads/2024/02/eigenlayer-restaking-ethereum-1.png"
											alt="Article Image" class="object-cover" />
									</a>
								</div>

								<!-- Third medal -->
								<div
									class="flex justify-center h-12 w-full text-center py-0 border-4 border-b-0 rounded-md bg-amber-800 border-amber-800">
									<img src="/assets/logo/podium/medaille_3.png" alt="Third medal"
										class="w-9 h-9 sm:w-10 sm:h-10" />
								</div>
							</div>
						</div>

						<!-- Code button -->
						<a href="https://github.com/tpicaud/Portfolio/blob/main/src/pages/podium.astro" target="_blank"
							class="text-white text-center hover:underline">
							Code
						</a>
					</div>
				</div>
			</div>

			<!-- Home page button -->
			<div class="flex justify-center">
				<a href="/" class="bg-gray-800 text-white px-4 py-2 text-center hover:underline">
					Back to home page
				</a>
			</div>
		</Layout>
	</body>
</html>