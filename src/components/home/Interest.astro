---
import type { IInterests, ISkills } from "@types";
import React from "react";

const { title, details } = Astro.props as IInterests;

// Made for 5 interests only
export const elements = ["Frontend", "Backend", "DevOps", "Design", "Other"];
---

<section
	class="flex items-start justify-between flex-col sm:flex-row dark:text-light mt-16"
>
	<h2 class="w-[15rem] mb-16">{title}</h2>

	<div class="w-full">
		<div class="flex flex-col w-full gap-y-12">
			<div class="w-full flex flex-row items-center justify-center">
				<!-- Get only 3 for first row -->
				{
					details.slice(0, 3).map((item) => (
						<div class="flex flex-col gap-y-2 m-auto items-center">
							<div class="w-32 h-32 md:w-40 md:h-40 border-2 border-double border-blue rounded-full absolute"></div>
							<img
								src={item.icon}
								alt={item.name}
								class="w-11 h-11 md:w-12 md:h-12 mt-6 md:mt-9 animate-custom-bounce"
							/>
							<p class="dark:text-light text-lg md:text-xl">{item.name}</p>
						</div>
					))
				}
			</div>

			<div class="w-full flex flex-row items-center justify-center">
				<!-- Get only 2 for second row -->
				{
					details.slice(3, 5).map((item) => (
						<div class="flex mx-[11%] flex-col gap-y-2 items-center">
							<div class="w-32 h-32 md:w-40 md:h-40 border-2 border-double border-blue rounded-full absolute"></div>
							<img
								src={item.icon}
								alt={item.name}
								class="w-11 h-11 md:w-12 md:h-12 mt-6 md:mt-9 animate-custom-bounce"
							/>
							<p class="dark:text-light text-lg md:text-xl">{item.name}</p>
						</div>

						// <div class="flex mx-[12%] flex-col gap-y-2 items-center text-2xl ">
						// 	<img
						// 		src={item.icon}
						// 		alt={item.name}
						// 		class=" w-16 h-16 animate-custom-bounce shadow"
						// 	/>
						// 	<p class="dark:text-light">{item.name}</p>
						// </div>
					))
				}
			</div>
		</div>
	</div>
</section>
