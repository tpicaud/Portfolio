<section
	class="flex items-start justify-between flex-col sm:flex-row dark:text-light mt-16"
>
	<h2 class="w-[15rem] mb-16">{title}</h2>

	<div class="w-full">
		<div
			class="flex flex-wrap items-center justify-center gap-y-12 gap-x-8 md:gap-x-32"
		>
			{
				details.map((item) => (
					<div class="flex flex-col gap-y-2 m-auto items-center">
						<div class=" flex flex-col items-center  w-32 h-32 md:w-40 md:h-40 border-2 border-double border-blue rounded-full transform hover:scale-110 transition duration-300 ease-in-out">
							<img
								src={item.icon}
								alt={item.name}
								class="w-11 h-11 md:w-12 md:h-12 mt-6 md:mt-9 animate-custom-bounce"
							/>
							<p class="dark:text-light text-lg md:text-xl">
								{item.name}
							</p>
						</div>
					</div>
				))
			}
